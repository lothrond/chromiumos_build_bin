CHROMIUMOS_GOOGLE_BOARD=betty

# Check board
if ! echo ${CHROMIUMOS_BOARDS} | grep -q ${BOARD}; then
    echo "I am not prepared to build for board: ${BOARD}"
    echo
    echo "(Is this correct? feel free to make changes!)"
    echo
    echo "see also:"
    echo "  https://sites.google.com/a/chromium.org/dev/chromium-os/developer-information-for-chrome-os-devices"
    echo
    exit 1

elif [ "$BOARD" == "$CHROMIUMOS_GOOGLE_BOARD" ]; then
    echo "You are not a googler..."
    exit 1
else
    echo "Board supported!"
fi

exit $?
